@model Comabit.UI.Areas.Authentication.Models.RegisterBaseViewModel

@{
    ViewBag.Title = "Registrierung Erfolgreich";
    Layout = "~/Views/Shared/_Layout_Anonymous.cshtml";
}

<div class="col-sm-10 col-md-8 col-lg-6 col-xl-4 mx-auto d-table h-100">
    <div class="d-table-cell align-middle">
        <div class="text-center mt-4">
            <h1 class="h2">Vielen Dank für deine Registrierung.</h1>
            <p class="lead">
                Wir haben eine E-Mail an @Model.EMail gesendet. Bitte klicke auf den Link in der E-Mail, um deine Registrierung zu bestätigen. Der Link ist 3 Tage gültig.
            </p>
        </div>
    </div>
</div>