@using System.Security.Claims
@using Users.Infrastructure
@model IEnumerable<Claim>

@{
    ViewBag.Title = "Claims";
}

<h1 class="h1 mb-1">Claims</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Start</a></li>
        <li class="breadcrumb-item active">Claims (Entwickler-Infos)</li>
    </ol>
</nav>

<div class="flex-grow-1">
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead class="text-primary">
                    <tr>
                        <th>Subject</th>
                        <th>Issuer</th>
                        <th>Type</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Claim claim in Model.OrderBy(x => x.Type))
                    {
                        <tr>
                            <td>@claim.Subject.Name</td>
                            <td>@claim.Issuer</td>
                            <td>@*@Html.ClaimType(claim.Type)*@@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>