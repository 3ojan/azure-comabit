@model Comabit.DL.ApplicationRole

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <h3>Sind Sie sicher, dass Sie die Rolle <strong>@Model.Name</strong> löschen möchten? </h3>

            <p>Durch das Löschen wird die Rolle Benutzern nur entzogen, die Benutzer werden nicht gelöscht.</p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <button type="submit" class="btn btn-danger">Ja, Löschen</button>
                    @Html.ActionLink("Nein, zurück zur Übersicht", "Index", null, new { @class = "btn btn-link" })
                </p>
            }
        </div>
    </div>
</div>
