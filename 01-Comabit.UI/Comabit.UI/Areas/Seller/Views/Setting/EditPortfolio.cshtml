@model PortfolioEditViewModel

@using Comabit.UI.Areas.Seller.Models.Settings;

@{
    ViewBag.Title = "Portfolio bearbeiten";
}

<h1 class="h1 mb-1">Mein Portfolio</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Start</a></li>
        <li class="breadcrumb-item active">Portfolio bearbeiten</li>
    </ol>
</nav>

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.CompanyId)
                    @Html.EditorFor(m => Model.PortfolioAreas)
                </div>
                <div class="card-footer">
                    @Html.ValidationSummary(true)
                    <button class="btn btn-primary btn-block" type="submit">Speichern</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $("body").on("change", ".form-check-input.category", function () {
            var isChecked = $(this).is(":checked");

            $(this).closest(".accordion").find("input[type=checkbox]").prop("checked", isChecked);

            if (isChecked) {
                $(this).closest(".accordion").find(".accordion-collapse").addClass("show");
            }
            else {
                $(this).closest(".accordion").find(".accordion-collapse").removeClass("show");
            }
        });
    </script>
}
